---
import BaseLayout from "@/layouts/base-layout.astro";
import FaqSection from "@/components/FaqSection";
import MobileNav from "@/components/MobileNav";
---

<BaseLayout title="Home">
  <!-- ===== HEADER ===== -->
  <header class="bg-[#111111] sticky top-0 z-40">
    <div class="max-w-[1440px] mx-auto flex items-center justify-between px-5 lg:px-16 py-4 lg:py-5">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2.5">
        <svg width="32" height="32" viewBox="0 0 120 120" fill="none" class="w-6 h-6 lg:w-8 lg:h-8">
          <path
            d="M60 0c33.137 0 60 26.863 60 60s-26.863 60-60 60-60-26.863-60-60 26.863-60 60-60z m6.976 32.692c-2.497-6.331-11.456-6.331-13.953 0l-4.546 11.55c-0.762 1.933-2.293 3.464-4.226 4.226l-11.55 4.546c-6.331 2.497-6.331 11.456 0 13.953l11.55 4.546c1.933 0.762 3.464 2.293 4.226 4.226l4.546 11.55c2.497 6.331 11.456 6.331 13.953 0l4.546-11.55c0.762-1.933 2.293-3.464 4.226-4.226l11.55-4.546c6.331-2.497 6.331-11.456 0-13.953l-11.55-4.546c-1.933-0.762-3.464-2.293-4.226-4.226l-4.546-11.55z"
            fill="#FF8400"
          />
        </svg>
        <span class="text-white text-sm lg:text-base font-bold tracking-[0.1em] font-[family-name:var(--font-primary)]">UTILITIES</span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-8">
        <a href="#features" class="text-[#888] text-sm font-medium font-[family-name:var(--font-secondary)] hover:text-white transition-colors">Features</a>
        <a href="#pricing" class="text-[#888] text-sm font-medium font-[family-name:var(--font-secondary)] hover:text-white transition-colors">Pricing</a>
        <a href="#about" class="text-[#888] text-sm font-medium font-[family-name:var(--font-secondary)] hover:text-white transition-colors">About</a>
        <a href="#docs" class="text-[#888] text-sm font-medium font-[family-name:var(--font-secondary)] hover:text-white transition-colors">Docs</a>
      </nav>

      <!-- Desktop CTA -->
      <div class="hidden lg:flex items-center gap-4">
        <a href="#login" class="text-[#888] text-sm font-medium font-[family-name:var(--font-secondary)] hover:text-white transition-colors">Log In</a>
        <a href="#trial" class="bg-[#FF8400] text-[#111111] text-sm font-semibold font-[family-name:var(--font-secondary)] px-5 py-2.5 rounded-lg hover:bg-[#E67700] transition-colors">Start Free Trial</a>
      </div>

      <!-- Mobile hamburger -->
      <MobileNav client:load />
    </div>
  </header>

  <!-- ===== HERO ===== -->
  <section class="bg-[#111111] pt-16 lg:pt-24 pb-16 lg:pb-24">
    <div class="max-w-[1440px] mx-auto px-5 lg:px-16">
      <div class="flex flex-col items-center text-center max-w-[800px] mx-auto">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-[#2E2E2E] mb-6">
          <div class="w-2 h-2 rounded-full bg-[#FF8400]"></div>
          <span class="text-[#888] text-xs lg:text-sm font-medium font-[family-name:var(--font-secondary)]">Now in Public Beta</span>
        </div>

        <!-- Headline -->
        <h1 class="text-white text-4xl lg:text-6xl font-bold leading-tight font-[family-name:var(--font-primary)] mb-6">
          Modern Infrastructure for <span class="text-[#FF8400]">Utility</span> Companies
        </h1>

        <!-- Subline -->
        <p class="text-[#888] text-base lg:text-lg leading-relaxed font-[family-name:var(--font-secondary)] mb-10 max-w-[600px]">
          Streamline operations, reduce costs, and deliver better service with our all-in-one platform built specifically for modern utility providers.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center gap-4 mb-16">
          <a href="#trial" class="bg-[#FF8400] text-[#111111] text-base font-semibold font-[family-name:var(--font-secondary)] px-8 py-3.5 rounded-lg hover:bg-[#E67700] transition-colors w-full sm:w-auto text-center">
            Start Free Trial
          </a>
          <a href="#demo" class="text-white text-base font-medium font-[family-name:var(--font-secondary)] px-8 py-3.5 rounded-lg border border-[#2E2E2E] hover:border-[#888] transition-colors w-full sm:w-auto text-center">
            Book a Demo
          </a>
        </div>

        <!-- Screenshot Placeholder -->
        <div class="w-full aspect-[16/10] bg-[#1A1A1A] border border-[#2E2E2E] rounded-xl flex items-center justify-center">
          <span class="text-[#444] text-sm font-[family-name:var(--font-primary)]">Dashboard Preview</span>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== TRUST LOGOS ===== -->
  <section class="bg-[#111111] border-t border-[#2E2E2E] py-12 lg:py-16">
    <div class="max-w-[1440px] mx-auto px-5 lg:px-16">
      <p class="text-[#666] text-xs lg:text-sm text-center font-medium font-[family-name:var(--font-secondary)] uppercase tracking-widest mb-8">
        Trusted by industry leaders
      </p>
      <div class="flex flex-wrap items-center justify-center gap-8 lg:gap-16">
        <span class="text-[#444] text-lg lg:text-xl font-bold font-[family-name:var(--font-primary)] tracking-wider">NEXTERA</span>
        <span class="text-[#444] text-lg lg:text-xl font-bold font-[family-name:var(--font-primary)] tracking-wider">GRIDWISE</span>
        <span class="text-[#444] text-lg lg:text-xl font-bold font-[family-name:var(--font-primary)] tracking-wider">VOLTERRA</span>
        <span class="text-[#444] text-lg lg:text-xl font-bold font-[family-name:var(--font-primary)] tracking-wider">MERIDIAN</span>
        <span class="text-[#444] text-lg lg:text-xl font-bold font-[family-name:var(--font-primary)] tracking-wider">CONDUIT</span>
      </div>
    </div>
  </section>

  <!-- ===== HOW IT WORKS ===== -->
  <section id="about" class="bg-[#F2F3F0] py-20 lg:py-28">
    <div class="max-w-[1440px] mx-auto px-5 lg:px-16">
      <div class="text-center mb-16">
        <p class="text-[#FF8400] text-xs lg:text-sm font-semibold font-[family-name:var(--font-primary)] uppercase tracking-widest mb-4">How It Works</p>
        <h2 class="text-[#111111] text-3xl lg:text-5xl font-bold font-[family-name:var(--font-primary)] mb-4">Up and Running in Days, Not Months</h2>
        <p class="text-[#666] text-base lg:text-lg font-[family-name:var(--font-secondary)] max-w-[600px] mx-auto">
          Our streamlined onboarding process gets your team productive quickly with minimal disruption to existing workflows.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
        <!-- Step 1 -->
        <div class="flex flex-col items-center text-center lg:items-start lg:text-left">
          <div class="w-12 h-12 rounded-full bg-[#FF8400] text-[#111111] flex items-center justify-center text-lg font-bold font-[family-name:var(--font-primary)] mb-6">1</div>
          <h3 class="text-[#111111] text-xl font-bold font-[family-name:var(--font-primary)] mb-3">Connect Your Systems</h3>
          <p class="text-[#666] text-sm lg:text-base font-[family-name:var(--font-secondary)] leading-relaxed">
            Integrate with your existing infrastructure using our pre-built connectors. Supports SCADA, AMI, GIS, and all major utility platforms.
          </p>
        </div>

        <!-- Step 2 -->
        <div class="flex flex-col items-center text-center lg:items-start lg:text-left">
          <div class="w-12 h-12 rounded-full bg-[#FF8400] text-[#111111] flex items-center justify-center text-lg font-bold font-[family-name:var(--font-primary)] mb-6">2</div>
          <h3 class="text-[#111111] text-xl font-bold font-[family-name:var(--font-primary)] mb-3">Configure & Customize</h3>
          <p class="text-[#666] text-sm lg:text-base font-[family-name:var(--font-secondary)] leading-relaxed">
            Set up dashboards, alerts, and workflows tailored to your operations. Our team helps configure everything to match your needs.
          </p>
        </div>

        <!-- Step 3 -->
        <div class="flex flex-col items-center text-center lg:items-start lg:text-left">
          <div class="w-12 h-12 rounded-full bg-[#FF8400] text-[#111111] flex items-center justify-center text-lg font-bold font-[family-name:var(--font-primary)] mb-6">3</div>
          <h3 class="text-[#111111] text-xl font-bold font-[family-name:var(--font-primary)] mb-3">Go Live & Scale</h3>
          <p class="text-[#666] text-sm lg:text-base font-[family-name:var(--font-secondary)] leading-relaxed">
            Launch with confidence. Monitor performance in real-time and scale seamlessly as your service territory grows.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== CORE FEATURES ===== -->
  <section id="features" class="bg-[#111111] py-20 lg:py-28">
    <div class="max-w-[1440px] mx-auto px-5 lg:px-16">
      <div class="text-center mb-16">
        <p class="text-[#FF8400] text-xs lg:text-sm font-semibold font-[family-name:var(--font-primary)] uppercase tracking-widest mb-4">Core Features</p>
        <h2 class="text-white text-3xl lg:text-5xl font-bold font-[family-name:var(--font-primary)] mb-4">Everything You Need to Operate</h2>
        <p class="text-[#888] text-base lg:text-lg font-[family-name:var(--font-secondary)] max-w-[600px] mx-auto">
          Purpose-built tools for utility companies, designed by industry experts who understand your challenges.
        </p>
      </div>

      <!-- Feature 1: Dashboard -->
      <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-20 mb-20 lg:mb-28">
        <div class="w-full lg:w-1/2 order-2 lg:order-1">
          <p class="text-[#FF8400] text-xs font-semibold font-[family-name:var(--font-primary)] uppercase tracking-widest mb-3">Real-Time Dashboard</p>
          <h3 class="text-white text-2xl lg:text-3xl font-bold font-[family-name:var(--font-primary)] mb-4">Complete Operational Visibility</h3>
          <p class="text-[#888] text-sm lg:text-base font-[family-name:var(--font-secondary)] leading-relaxed mb-6">
            Monitor your entire grid from a single dashboard. Track performance metrics, identify anomalies, and make data-driven decisions with real-time insights across all your service areas.
          </p>
          <a href="#learn-more" class="text-[#FF8400] text-sm font-semibold font-[family-name:var(--font-secondary)] hover:underline">Learn more &rarr;</a>
        </div>
        <div class="w-full lg:w-1/2 order-1 lg:order-2">
          <div class="aspect-[4/3] bg-[#1A1A1A] border border-[#2E2E2E] rounded-xl flex items-center justify-center">
            <span class="text-[#444] text-sm font-[family-name:var(--font-primary)]">Dashboard Screenshot</span>
          </div>
        </div>
      </div>

      <!-- Feature 2: Smart Meters -->
      <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-20 mb-20 lg:mb-28">
        <div class="w-full lg:w-1/2">
          <div class="aspect-[4/3] bg-[#1A1A1A] border border-[#2E2E2E] rounded-xl flex items-center justify-center">
            <span class="text-[#444] text-sm font-[family-name:var(--font-primary)]">Smart Meters Screenshot</span>
          </div>
        </div>
        <div class="w-full lg:w-1/2">
          <p class="text-[#FF8400] text-xs font-semibold font-[family-name:var(--font-primary)] uppercase tracking-widest mb-3">Smart Metering</p>
          <h3 class="text-white text-2xl lg:text-3xl font-bold font-[family-name:var(--font-primary)] mb-4">Advanced Meter Management</h3>
          <p class="text-[#888] text-sm lg:text-base font-[family-name:var(--font-secondary)] leading-relaxed mb-6">
            Manage millions of smart meters from a single platform. Automated reading collection, tamper detection, and predictive maintenance keep your metering infrastructure running at peak efficiency.
          </p>
          <a href="#learn-more" class="text-[#FF8400] text-sm font-semibold font-[family-name:var(--font-secondary)] hover:underline">Learn more &rarr;</a>
        </div>
      </div>

      <!-- Feature 3: Outage Management -->
      <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-20">
        <div class="w-full lg:w-1/2 order-2 lg:order-1">
          <p class="text-[#FF8400] text-xs font-semibold font-[family-name:var(--font-primary)] uppercase tracking-widest mb-3">Outage Management</p>
          <h3 class="text-white text-2xl lg:text-3xl font-bold font-[family-name:var(--font-primary)] mb-4">Rapid Response, Faster Recovery</h3>
          <p class="text-[#888] text-sm lg:text-base font-[family-name:var(--font-secondary)] leading-relaxed mb-6">
            Detect outages before customers call. Our AI-powered system pinpoints affected areas, dispatches crews automatically, and provides real-time restoration updates to your customers.
          </p>
          <a href="#learn-more" class="text-[#FF8400] text-sm font-semibold font-[family-name:var(--font-secondary)] hover:underline">Learn more &rarr;</a>
        </div>
        <div class="w-full lg:w-1/2 order-1 lg:order-2">
          <div class="aspect-[4/3] bg-[#1A1A1A] border border-[#2E2E2E] rounded-xl flex items-center justify-center">
            <span class="text-[#444] text-sm font-[family-name:var(--font-primary)]">Outage Management Screenshot</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== CAPABILITIES / SECONDARY FEATURES ===== -->
  <section class="bg-[#F2F3F0] py-20 lg:py-28">
    <div class="max-w-[1440px] mx-auto px-5 lg:px-16">
      <div class="text-center mb-16">
        <p class="text-[#FF8400] text-xs lg:text-sm font-semibold font-[family-name:var(--font-primary)] uppercase tracking-widest mb-4">Capabilities</p>
        <h2 class="text-[#111111] text-3xl lg:text-5xl font-bold font-[family-name:var(--font-primary)] mb-4">Built for Every Department</h2>
        <p class="text-[#666] text-base lg:text-lg font-[family-name:var(--font-secondary)] max-w-[600px] mx-auto">
          From billing to field operations, every team gets purpose-built tools that work together seamlessly.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        <!-- Card 1 -->
        <div class="bg-white rounded-xl p-6 lg:p-8 border border-[#E7E8E5]">
          <div class="w-10 h-10 rounded-lg bg-[#FFF0DB] flex items-center justify-center mb-5">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF8400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="5" width="20" height="14" rx="2"/><line x1="2" y1="10" x2="22" y2="10"/></svg>
          </div>
          <h3 class="text-[#111111] text-lg font-bold font-[family-name:var(--font-primary)] mb-2">Automated Billing</h3>
          <p class="text-[#666] text-sm font-[family-name:var(--font-secondary)] leading-relaxed">
            Generate accurate invoices automatically with support for complex rate structures, TOU pricing, and demand charges.
          </p>
        </div>

        <!-- Card 2 -->
        <div class="bg-white rounded-xl p-6 lg:p-8 border border-[#E7E8E5]">
          <div class="w-10 h-10 rounded-lg bg-[#FFF0DB] flex items-center justify-center mb-5">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF8400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
          </div>
          <h3 class="text-[#111111] text-lg font-bold font-[family-name:var(--font-primary)] mb-2">Customer Portal</h3>
          <p class="text-[#666] text-sm font-[family-name:var(--font-secondary)] leading-relaxed">
            Self-service portal for customers to view usage, pay bills, report issues, and manage their accounts 24/7.
          </p>
        </div>

        <!-- Card 3 -->
        <div class="bg-white rounded-xl p-6 lg:p-8 border border-[#E7E8E5]">
          <div class="w-10 h-10 rounded-lg bg-[#FFF0DB] flex items-center justify-center mb-5">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF8400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/></svg>
          </div>
          <h3 class="text-[#111111] text-lg font-bold font-[family-name:var(--font-primary)] mb-2">Compliance Reports</h3>
          <p class="text-[#666] text-sm font-[family-name:var(--font-secondary)] leading-relaxed">
            Automatically generate regulatory compliance reports for NERC, FERC, and state PUC requirements with audit trails.
          </p>
        </div>

        <!-- Card 4 -->
        <div class="bg-white rounded-xl p-6 lg:p-8 border border-[#E7E8E5]">
          <div class="w-10 h-10 rounded-lg bg-[#FFF0DB] flex items-center justify-center mb-5">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF8400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>
          </div>
          <h3 class="text-[#111111] text-lg font-bold font-[family-name:var(--font-primary)] mb-2">Open API</h3>
          <p class="text-[#666] text-sm font-[family-name:var(--font-secondary)] leading-relaxed">
            RESTful APIs with comprehensive documentation. Build custom integrations and extend the platform to fit your workflows.
          </p>
        </div>

        <!-- Card 5 -->
        <div class="bg-white rounded-xl p-6 lg:p-8 border border-[#E7E8E5]">
          <div class="w-10 h-10 rounded-lg bg-[#FFF0DB] flex items-center justify-center mb-5">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF8400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="5" y="2" width="14" height="20" rx="2" ry="2"/><line x1="12" y1="18" x2="12.01" y2="18"/></svg>
          </div>
          <h3 class="text-[#111111] text-lg font-bold font-[family-name:var(--font-primary)] mb-2">Mobile Crews</h3>
          <p class="text-[#666] text-sm font-[family-name:var(--font-secondary)] leading-relaxed">
            Native mobile apps for field technicians with offline capability, GPS tracking, and real-time work order management.
          </p>
        </div>

        <!-- Card 6 -->
        <div class="bg-white rounded-xl p-6 lg:p-8 border border-[#E7E8E5]">
          <div class="w-10 h-10 rounded-lg bg-[#FFF0DB] flex items-center justify-center mb-5">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF8400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
          </div>
          <h3 class="text-[#111111] text-lg font-bold font-[family-name:var(--font-primary)] mb-2">Enterprise Security</h3>
          <p class="text-[#666] text-sm font-[family-name:var(--font-secondary)] leading-relaxed">
            SOC 2 Type II compliant with end-to-end encryption, SSO, role-based access control, and comprehensive audit logging.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== SOCIAL PROOF ===== -->
  <section class="bg-[#111111] py-20 lg:py-28">
    <div class="max-w-[1440px] mx-auto px-5 lg:px-16">
      <!-- Stats -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 mb-16 lg:mb-20">
        <div class="text-center">
          <p class="text-[#FF8400] text-3xl lg:text-5xl font-bold font-[family-name:var(--font-primary)] mb-2">150+</p>
          <p class="text-[#888] text-sm font-[family-name:var(--font-secondary)]">Utility Companies</p>
        </div>
        <div class="text-center">
          <p class="text-[#FF8400] text-3xl lg:text-5xl font-bold font-[family-name:var(--font-primary)] mb-2">12M+</p>
          <p class="text-[#888] text-sm font-[family-name:var(--font-secondary)]">Meters Managed</p>
        </div>
        <div class="text-center">
          <p class="text-[#FF8400] text-3xl lg:text-5xl font-bold font-[family-name:var(--font-primary)] mb-2">99.9%</p>
          <p class="text-[#888] text-sm font-[family-name:var(--font-secondary)]">Uptime SLA</p>
        </div>
        <div class="text-center">
          <p class="text-[#FF8400] text-3xl lg:text-5xl font-bold font-[family-name:var(--font-primary)] mb-2">40%</p>
          <p class="text-[#888] text-sm font-[family-name:var(--font-secondary)]">Cost Reduction</p>
        </div>
      </div>

      <!-- Divider -->
      <div class="h-px bg-[#2E2E2E] mb-16 lg:mb-20"></div>

      <!-- Testimonials -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
        <div class="bg-[#1A1A1A] rounded-xl p-8 lg:p-10 border border-[#2E2E2E]">
          <p class="text-[#CCCCCC] text-base lg:text-lg font-[family-name:var(--font-secondary)] leading-relaxed mb-8">
            "Utilities transformed how we manage our grid. We reduced outage response times by 60% and our customer satisfaction scores are at an all-time high."
          </p>
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-full bg-[#2E2E2E] flex items-center justify-center text-[#888] text-sm font-bold font-[family-name:var(--font-primary)]">SJ</div>
            <div>
              <p class="text-white text-sm font-semibold font-[family-name:var(--font-secondary)]">Sarah Johnson</p>
              <p class="text-[#666] text-sm font-[family-name:var(--font-secondary)]">VP Operations, Meridian Energy</p>
            </div>
          </div>
        </div>

        <div class="bg-[#1A1A1A] rounded-xl p-8 lg:p-10 border border-[#2E2E2E]">
          <p class="text-[#CCCCCC] text-base lg:text-lg font-[family-name:var(--font-secondary)] leading-relaxed mb-8">
            "The ROI was immediate. Within the first quarter, we automated 80% of our billing processes and eliminated nearly all manual data entry errors."
          </p>
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-full bg-[#2E2E2E] flex items-center justify-center text-[#888] text-sm font-bold font-[family-name:var(--font-primary)]">MC</div>
            <div>
              <p class="text-white text-sm font-semibold font-[family-name:var(--font-secondary)]">Michael Chen</p>
              <p class="text-[#666] text-sm font-[family-name:var(--font-secondary)]">CTO, GridWise Solutions</p>
            </div>
          </div>
