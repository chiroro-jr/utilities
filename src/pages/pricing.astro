---
import SiteLayout from "@/layouts/site-layout.astro";
import PricingCards from "@/components/PricingCards";
import FaqSection from "@/components/FaqSection";
---

<SiteLayout title="Pricing" activeNav="pricing">
    <!-- ===== HERO SECTION ===== -->
    <section class="bg-foreground">
        <div class="max-w-360 mx-auto px-5 lg:px-16 py-24 lg:py-30">
            <div class="flex flex-col items-center text-center">
                <span class="text-primary text-xs lg:text-sm font-semibold font-primary uppercase tracking-widest mb-4">
                    Pricing
                </span>
                <h1 class="text-white text-3xl lg:text-5xl font-bold leading-tight font-primary mb-4 max-w-200">
                    Simple pricing for critical infrastructure.
                </h1>
                <p class="text-[#B8B9B6] text-base lg:text-lg leading-relaxed font-secondary max-w-150">
                    Transparent pricing that scales with your grid. No hidden fees, no surprises. Start with our free tier and upgrade as your operations grow.
                </p>
            </div>
        </div>
    </section>

    <!-- ===== PRICING CARDS SECTION ===== -->
    <section class="bg-background">
        <div class="max-w-360 mx-auto px-5 lg:px-16 py-24 lg:py-30">
            <PricingCards client:load />
        </div>
    </section>

    <!-- ===== FAQ SECTION ===== -->
    <section class="bg-foreground">
        <div class="max-w-360 mx-auto px-5 lg:px-16 py-24 lg:py-30">
            <div class="flex flex-col items-center text-center mb-12">
                <span class="text-primary text-xs lg:text-sm font-semibold font-primary uppercase tracking-widest mb-4">
                    FAQ
                </span>
                <h2 class="text-white text-2xl lg:text-4xl font-bold font-primary mb-4">
                    Common questions about pricing.
                </h2>
                <p class="text-[#B8B9B6] text-base lg:text-lg font-secondary">
                    Everything you need to know about our pricing and billing.
                </p>
            </div>
            <div class="max-w-200 mx-auto">
                <FaqSection client:load />
            </div>
        </div>
    </section>

    <!-- ===== CTA SECTION ===== -->
    <section class="bg-background">
        <div class="max-w-360 mx-auto px-5 lg:px-16 py-24 lg:py-30">
            <div class="flex flex-col items-center text-center">
                <span class="text-primary text-xs lg:text-sm font-semibold font-primary uppercase tracking-widest mb-4">
                    Get Started
                </span>
                <h2 class="text-foreground text-2xl lg:text-4xl font-bold font-primary mb-4">
                    Ready to power your grid operations?
                </h2>
                <p class="text-muted-foreground text-base lg:text-lg font-secondary mb-8 max-w-180">
                    Join hundreds of utilities already using our platform to manage critical infrastructure.
                </p>
                <div class="flex flex-col sm:flex-row items-center gap-4 mb-6">
                    <a
                        href="#trial"
                        class="bg-primary text-primary-foreground text-base font-semibold font-secondary px-8 py-3.5 rounded-lg hover:bg-primary/85 transition-colors w-full sm:w-auto text-center"
                    >
                        Start Free Trial
                    </a>
                    <a
                        href="#contact"
                        class="text-foreground text-base font-medium font-secondary px-8 py-3.5 rounded-lg border border-border hover:bg-secondary transition-colors w-full sm:w-auto text-center"
                    >
                        Contact Sales
                    </a>
                </div>
                <div class="inline-flex items-center gap-3 px-5 py-4 rounded-full border border-secondary bg-card">
                    <svg
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="#FF8400"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z" />
                    </svg>
                    <span class="text-foreground text-sm font-medium font-secondary">
                        No credit card required. 14-day free trial.
                    </span>
                </div>
            </div>
        </div>
    </section>
</SiteLayout>
