---
import AuthLayout from "@/layouts/auth-layout.astro";
---

<AuthLayout
    title="Reset Password"
    tagline="Almost there!\nSecure your account"
    taglineSub="Choose a strong password to protect your utility management dashboard"
>
    <!-- Logo Header -->
    <div class="flex flex-col gap-6 items-center lg:items-start">
        <!-- Logo (links to home) -->
        <a href="/">
            <svg
                width="66"
                height="66"
                viewBox="0 0 120 120"
                fill="none"
                class="w-12 h-12 lg:w-12 lg:h-12"
            >
                <path
                    d="M60 0c33.137 0 60 26.863 60 60s-26.863 60-60 60-60-26.863-60-60 26.863-60 60-60z m6.976 32.692c-2.497-6.331-11.456-6.331-13.953 0l-4.546 11.55c-0.762 1.933-2.293 3.464-4.226 4.226l-11.55 4.546c-6.331 2.497-6.331 11.456 0 13.953l11.55 4.546c1.933 0.762 3.464 2.293 4.226 4.226l4.546 11.55c2.497 6.331 11.456 6.331 13.953 0l4.546-11.55c0.762-1.933 2.293-3.464 4.226-4.226l11.55-4.546c6.331-2.497 6.331-11.456 0-13.953l-11.55-4.546c-1.933-0.762-3.464-2.293-4.226-4.226l-4.546-11.55z"
                    fill="#FF8400"></path>
            </svg>
        </a>

        <!-- Title Group -->
        <div class="flex flex-col gap-2 text-center lg:text-left w-full">
            <h1 class="text-foreground text-2xl lg:text-[32px] font-bold font-primary">
                Reset Password
            </h1>
            <p class="text-muted-foreground text-base font-secondary">
                Create a new strong password
            </p>
        </div>
    </div>

    <!-- Form -->
    <form class="flex flex-col gap-5">
        <!-- New Password Input -->
        <div class="flex flex-col gap-1.5">
            <label for="newPassword" class="text-foreground text-sm font-medium font-secondary">
                New Password
            </label>
            <input
                type="password"
                id="newPassword"
                name="newPassword"
                placeholder="••••••••"
                class="w-full h-10 px-4 border border-input rounded-full bg-background text-foreground text-sm font-secondary placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
            />
        </div>

        <!-- Confirm Password Input -->
        <div class="flex flex-col gap-1.5">
            <label for="confirmPassword" class="text-foreground text-sm font-medium font-secondary">
                Confirm Password
            </label>
            <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                placeholder="••••••••"
                class="w-full h-10 px-4 border border-input rounded-full bg-background text-foreground text-sm font-secondary placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
            />
        </div>

        <!-- Reset Password Button -->
        <button
            type="submit"
            class="w-full h-12 bg-primary text-primary-foreground text-sm font-medium font-primary rounded-full hover:bg-primary/85 transition-colors"
        >
            Reset Password
        </button>
    </form>
</AuthLayout>
