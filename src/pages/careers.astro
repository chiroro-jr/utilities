---
import SiteLayout from "@/layouts/site-layout.astro";
---

<SiteLayout title="Careers" activeNav="careers">
    <!-- ===== HERO SECTION ===== -->
    <section class="bg-background pt-12 lg:pt-20 pb-10 lg:pb-16">
        <div class="max-w-360 mx-auto px-5 lg:px-20">
            <div class="flex flex-col gap-5 lg:gap-6 max-w-200">
                <!-- Headline -->
                <h1 class="text-foreground text-[28px] lg:text-[64px] font-bold leading-[1.15] lg:leading-[1.1] font-primary">
                    Join Our Team
                </h1>
                
                <!-- Subline -->
                <p class="text-muted-foreground text-lg lg:text-2xl font-secondary leading-relaxed lg:leading-[1.5]">
                    We're building something extraordinary. Join us in shaping the future of utilities.
                </p>
                
                <!-- Description -->
                <p class="text-foreground text-base lg:text-lg font-secondary leading-relaxed">
                    Open positions across design, engineering, and product. Remote-first. Impact-driven. Growth-oriented.
                </p>
                
                <!-- CTA Button -->
                <a
                    href="#positions"
                    class="bg-primary text-foreground text-sm lg:text-base font-semibold font-secondary px-5 lg:px-6 py-2.5 lg:py-3 rounded-lg hover:bg-primary/85 transition-colors w-fit mt-2"
                >
                    View Open Positions
                </a>
            </div>
        </div>
    </section>

    <!-- ===== OPEN POSITIONS ===== -->
    <section id="positions" class="bg-background py-10 lg:py-20">
        <div class="max-w-360 mx-auto px-5 lg:px-20">
            <div class="flex flex-col gap-8 lg:gap-12">
                <!-- Section Header -->
                <div class="flex flex-col gap-3 lg:gap-4 max-w-200">
                    <h2 class="text-foreground text-[22px] lg:text-5xl font-bold leading-[1.2] lg:leading-[1.15] font-primary">
                        Open Positions
                    </h2>
                    <p class="text-muted-foreground text-base lg:text-xl font-secondary leading-relaxed lg:leading-[1.6]">
                        Find your next role. We're always looking for talented individuals who share our passion for innovation.
                    </p>
                </div>

                <!-- Job Cards -->
                <div class="flex flex-col gap-4 lg:gap-6">
                    <!-- Job 1: Senior Frontend Engineer -->
                    <div class="bg-card rounded-2xl p-6 lg:p-8 border border-secondary flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 lg:gap-6">
                        <div class="flex flex-col gap-2 lg:gap-3">
                            <h3 class="text-foreground text-lg lg:text-2xl font-semibold font-primary">
                                Senior Frontend Engineer
                            </h3>
                            <div class="flex flex-wrap items-center gap-2 lg:gap-4 text-muted-foreground text-sm font-secondary">
                                <span>Remote</span>
                                <span class="hidden lg:inline">•</span>
                                <span>Full-time</span>
                                <span class="hidden lg:inline">•</span>
                                <span>Engineering</span>
                            </div>
                        </div>
                        <a
                            href="#apply"
                            class="bg-primary text-foreground text-sm font-semibold font-secondary px-5 py-2.5 rounded-lg hover:bg-primary/85 transition-colors w-full lg:w-auto text-center"
                        >
                            Apply Now
                        </a>
                    </div>

                    <!-- Job 2: Product Designer -->
                    <div class="bg-card rounded-2xl p-6 lg:p-8 border border-secondary flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 lg:gap-6">
                        <div class="flex flex-col gap-2 lg:gap-3">
                            <h3 class="text-foreground text-lg lg:text-2xl font-semibold font-primary">
                                Product Designer
                            </h3>
                            <div class="flex flex-wrap items-center gap-2 lg:gap-4 text-muted-foreground text-sm font-secondary">
                                <span>Remote</span>
                                <span class="hidden lg:inline">•</span>
                                <span>Full-time</span>
                                <span class="hidden lg:inline">•</span>
                                <span>Design</span>
                            </div>
                        </div>
                        <a
                            href="#apply"
                            class="bg-primary text-foreground text-sm font-semibold font-secondary px-5 py-2.5 rounded-lg hover:bg-primary/85 transition-colors w-full lg:w-auto text-center"
                        >
                            Apply Now
                        </a>
                    </div>

                    <!-- Job 3: Backend Engineer -->
                    <div class="bg-card rounded-2xl p-6 lg:p-8 border border-secondary flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 lg:gap-6">
                        <div class="flex flex-col gap-2 lg:gap-3">
                            <h3 class="text-foreground text-lg lg:text-2xl font-semibold font-primary">
                                Backend Engineer
                            </h3>
                            <div class="flex flex-wrap items-center gap-2 lg:gap-4 text-muted-foreground text-sm font-secondary">
                                <span>Remote</span>
                                <span class="hidden lg:inline">•</span>
                                <span>Full-time</span>
                                <span class="hidden lg:inline">•</span>
                                <span>Engineering</span>
                            </div>
                        </div>
                        <a
                            href="#apply"
                            class="bg-primary text-foreground text-sm font-semibold font-secondary px-5 py-2.5 rounded-lg hover:bg-primary/85 transition-colors w-full lg:w-auto text-center"
                        >
                            Apply Now
                        </a>
                    </div>

                    <!-- Job 4: Product Manager -->
                    <div class="bg-card rounded-2xl p-6 lg:p-8 border border-secondary flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 lg:gap-6">
                        <div class="flex flex-col gap-2 lg:gap-3">
                            <h3 class="text-foreground text-lg lg:text-2xl font-semibold font-primary">
                                Product Manager
                            </h3>
                            <div class="flex flex-wrap items-center gap-2 lg:gap-4 text-muted-foreground text-sm font-secondary">
                                <span>Remote</span>
                                <span class="hidden lg:inline">•</span>
                                <span>Full-time</span>
                                <span class="hidden lg:inline">•</span>
                                <span>Product</span>
                            </div>
                        </div>
                        <a
                            href="#apply"
                            class="bg-primary text-foreground text-sm font-semibold font-secondary px-5 py-2.5 rounded-lg hover:bg-primary/85 transition-colors w-full lg:w-auto text-center"
                        >
                            Apply Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ===== BENEFITS SECTION (Dark) ===== -->
    <section class="bg-foreground py-10 lg:py-20">
        <div class="max-w-360 mx-auto px-5 lg:px-20">
            <div class="flex flex-col gap-8 lg:gap-12">
                <!-- Section Header -->
                <div class="flex flex-col gap-3 lg:gap-4 max-w-200">
                    <h2 class="text-white text-[22px] lg:text-5xl font-bold leading-[1.2] lg:leading-[1.15] font-primary">
                        Why Work With Us
                    </h2>
                    <p class="text-muted-foreground text-base lg:text-xl font-secondary leading-relaxed lg:leading-[1.6]">
                        We believe in creating an environment where you can do your best work.
                    </p>
                </div>

                <!-- Benefits Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-6">
                    <!-- Benefit 1: Remote First -->
                    <div class="bg-[#1A1A1A] rounded-2xl p-6 lg:p-8 flex flex-col gap-3 lg:gap-4">
                        <h3 class="text-white text-lg lg:text-2xl font-semibold font-primary">
                            Remote First
                        </h3>
                        <p class="text-[#B8B9B6] text-sm lg:text-base font-secondary leading-relaxed">
                            Work from anywhere in the world. We believe in results, not locations.
                        </p>
                    </div>

                    <!-- Benefit 2: Health & Wellness -->
                    <div class="bg-[#1A1A1A] rounded-2xl p-6 lg:p-8 flex flex-col gap-3 lg:gap-4">
                        <h3 class="text-white text-lg lg:text-2xl font-semibold font-primary">
                            Health & Wellness
                        </h3>
                        <p class="text-[#B8B9B6] text-sm lg:text-base font-secondary leading-relaxed">
                            Comprehensive health coverage, mental health support, and wellness stipends.
                        </p>
                    </div>

                    <!-- Benefit 3: Growth & Learning -->
                    <div class="bg-[#1A1A1A] rounded-2xl p-6 lg:p-8 flex flex-col gap-3 lg:gap-4">
                        <h3 class="text-white text-lg lg:text-2xl font-semibold font-primary">
                            Growth & Learning
                        </h3>
                        <p class="text-[#B8B9B6] text-sm lg:text-base font-secondary leading-relaxed">
                            Annual learning budget, conference attendance, and dedicated time for skill development.
                        </p>
                    </div>

                    <!-- Benefit 4: Competitive Compensation -->
                    <div class="bg-[#1A1A1A] rounded-2xl p-6 lg:p-8 flex flex-col gap-3 lg:gap-4">
                        <h3 class="text-white text-lg lg:text-2xl font-semibold font-primary">
                            Competitive Compensation
                        </h3>
                        <p class="text-[#B8B9B6] text-sm lg:text-base font-secondary leading-relaxed">
                            Salary benchmarks against top tech companies, equity, and performance bonuses.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ===== CTA SECTION ===== -->
    <section class="bg-background py-10 lg:py-20">
        <div class="max-w-360 mx-auto px-5 lg:px-20">
            <div class="flex flex-col items-center text-center gap-5 lg:gap-6 max-w-150 mx-auto">
                <!-- Headline -->
                <h2 class="text-foreground text-[22px] lg:text-5xl font-bold leading-[1.2] lg:leading-[1.15] font-primary">
                    Ready to join us?
                </h2>
                
                <!-- Subline -->
                <p class="text-muted-foreground text-base lg:text-xl font-secondary leading-relaxed">
                    Take the next step in your career. We'd love to hear from you.
                </p>
                
                <!-- Buttons -->
                <div class="flex flex-col lg:flex-row items-center gap-3 lg:gap-4 w-full lg:w-auto mt-2">
                    <a
                        href="#positions"
                        class="bg-primary text-foreground text-sm lg:text-base font-semibold font-secondary px-6 lg:px-8 py-2.5 lg:py-3 rounded-lg hover:bg-primary/85 transition-colors w-full lg:w-auto text-center"
                    >
                        View All Positions
                    </a>
                    <a
                        href="/about"
                        class="text-foreground text-sm lg:text-base font-medium font-secondary px-6 lg:px-8 py-2.5 lg:py-3 rounded-lg border border-border hover:bg-secondary transition-colors w-full lg:w-auto text-center"
                    >
                        Contact Us
                    </a>
                </div>
            </div>
        </div>
    </section>
</SiteLayout>
