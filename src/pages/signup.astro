---
import AuthLayout from "@/layouts/auth-layout.astro";
---

<AuthLayout
    title="Sign Up"
    tagline="Start monitoring\nyour infrastructure"
    taglineSub="Get real-time insights into your utility network with powerful analytics"
>
    <!-- Logo Header -->
    <div class="flex flex-col gap-6 items-center lg:items-start">
        <!-- Logo (links to home) -->
        <a href="/">
            <svg
                width="66"
                height="66"
                viewBox="0 0 120 120"
                fill="none"
                class="w-12 h-12 lg:w-12 lg:h-12"
            >
                <path
                    d="M60 0c33.137 0 60 26.863 60 60s-26.863 60-60 60-60-26.863-60-60 26.863-60 60-60z m6.976 32.692c-2.497-6.331-11.456-6.331-13.953 0l-4.546 11.55c-0.762 1.933-2.293 3.464-4.226 4.226l-11.55 4.546c-6.331 2.497-6.331 11.456 0 13.953l11.55 4.546c1.933 0.762 3.464 2.293 4.226 4.226l4.546 11.55c2.497 6.331 11.456 6.331 13.953 0l4.546-11.55c0.762-1.933 2.293-3.464 4.226-4.226l11.55-4.546c6.331-2.497 6.331-11.456 0-13.953l-11.55-4.546c-1.933-0.762-3.464-2.293-4.226-4.226l-4.546-11.55z"
                    fill="#FF8400"></path>
            </svg>
        </a>

        <!-- Title Group -->
        <div class="flex flex-col gap-2 text-center lg:text-left w-full">
            <h1 class="text-foreground text-2xl lg:text-[32px] font-bold font-primary">
                Create Account
            </h1>
            <p class="text-muted-foreground text-base font-secondary">
                Join us to manage your meters
            </p>
        </div>
    </div>

    <!-- Form -->
    <form class="flex flex-col gap-4">
        <!-- Name Row -->
        <div class="flex flex-col sm:flex-row gap-3">
            <!-- First Name -->
            <div class="flex flex-col gap-1.5 flex-1">
                <label for="firstName" class="text-foreground text-sm font-medium font-secondary">
                    First Name
                </label>
                <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    placeholder="John"
                    class="w-full h-10 px-4 border border-input rounded-full bg-background text-foreground text-sm font-secondary placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
                />
            </div>

            <!-- Last Name -->
            <div class="flex flex-col gap-1.5 flex-1">
                <label for="lastName" class="text-foreground text-sm font-medium font-secondary">
                    Last Name
                </label>
                <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    placeholder="Doe"
                    class="w-full h-10 px-4 border border-input rounded-full bg-background text-foreground text-sm font-secondary placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
                />
            </div>
        </div>

        <!-- Email Input -->
        <div class="flex flex-col gap-1.5">
            <label for="email" class="text-foreground text-sm font-medium font-secondary">
                Email
            </label>
            <input
                type="email"
                id="email"
                name="email"
                placeholder="john@example.com"
                class="w-full h-10 px-4 border border-input rounded-full bg-background text-foreground text-sm font-secondary placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
            />
        </div>

        <!-- Password Input -->
        <div class="flex flex-col gap-1.5">
            <label for="password" class="text-foreground text-sm font-medium font-secondary">
                Password
            </label>
            <input
                type="password"
                id="password"
                name="password"
                placeholder="••••••••"
                class="w-full h-10 px-4 border border-input rounded-full bg-background text-foreground text-sm font-secondary placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
            />
        </div>

        <!-- Sign Up Button -->
        <button
            type="submit"
            class="w-full h-12 bg-primary text-primary-foreground text-sm font-medium font-primary rounded-full hover:bg-primary/85 transition-colors mt-2"
        >
            Sign Up
        </button>
    </form>

    <!-- Divider -->
    <div class="flex items-center gap-4">
        <div class="flex-1 h-px bg-border"></div>
        <span class="text-muted-foreground text-sm font-secondary">or</span>
        <div class="flex-1 h-px bg-border"></div>
    </div>

    <!-- Continue with Google -->
    <button
        type="button"
        class="w-full flex items-center justify-center gap-2 h-10 border border-border rounded-full text-foreground text-sm font-medium font-primary bg-background hover:bg-secondary transition-colors shadow-sm"
    >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        Sign Up with Google
    </button>

    <!-- Footer -->
    <div class="flex items-center justify-center gap-1.5">
        <span class="text-muted-foreground text-sm font-secondary">
            Already have an account?
        </span>
        <a href="/signin" class="text-primary text-sm font-semibold font-secondary hover:underline">
            Sign In
        </a>
    </div>
</AuthLayout>
