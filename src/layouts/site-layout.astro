---
import BaseLayout from "./base-layout.astro";
import MobileNav from "@/components/MobileNav";

interface Props {
    title: string;
    activeNav?: "features" | "pricing" | "about" | "docs" | "careers";
}

const { title, activeNav } = Astro.props;

const navLinkClass = (nav: string) => {
    const isActive = activeNav === nav;
    return isActive 
        ? "text-primary text-sm font-medium font-secondary"
        : "text-muted-foreground text-sm font-medium font-secondary hover:text-white transition-colors";
};
---

<BaseLayout title={title}>
    <!-- ===== HEADER ===== -->
    <header class="bg-foreground fixed top-0 left-0 right-0 z-40">
        <div class="max-w-360 mx-auto flex items-center justify-between px-5 lg:px-16 py-4 lg:py-5">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2.5">
                <svg
                    width="32"
                    height="32"
                    viewBox="0 0 120 120"
                    fill="none"
                    class="w-6 h-6 lg:w-8 lg:h-8"
                >
                    <path
                        d="M60 0c33.137 0 60 26.863 60 60s-26.863 60-60 60-60-26.863-60-60 26.863-60 60-60z m6.976 32.692c-2.497-6.331-11.456-6.331-13.953 0l-4.546 11.55c-0.762 1.933-2.293 3.464-4.226 4.226l-11.55 4.546c-6.331 2.497-6.331 11.456 0 13.953l11.55 4.546c1.933 0.762 3.464 2.293 4.226 4.226l4.546 11.55c2.497 6.331 11.456 6.331 13.953 0l4.546-11.55c0.762-1.933 2.293-3.464 4.226-4.226l11.55-4.546c6.331-2.497 6.331-11.456 0-13.953l-11.55-4.546c-1.933-0.762-3.464-2.293-4.226-4.226l-4.546-11.55z"
                        fill="#FF8400"></path>
                </svg>
                <span class="text-white text-sm lg:text-base font-bold tracking-widest font-primary"
                    >UTILITIES</span
                >
            </a>

            <!-- Desktop Nav -->
            <nav class="hidden lg:flex items-center gap-8">
                <a href="/features" class={navLinkClass("features")}>Features</a>
                <a href="#pricing" class={navLinkClass("pricing")}>Pricing</a>
                <a href="/about" class={navLinkClass("about")}>About</a>
                <a href="/careers" class={navLinkClass("careers")}>Careers</a>
                <a href="#docs" class={navLinkClass("docs")}>Docs</a>
            </nav>

            <!-- Desktop CTA -->
            <div class="hidden lg:flex items-center gap-4">
                <a
                    href="/signin"
                    class="text-muted-foreground text-sm font-medium font-secondary hover:text-white transition-colors"
                    >Log In</a
                >
                <a
                    href="#trial"
                    class="bg-primary text-foreground text-sm font-semibold font-secondary px-5 py-2.5 rounded-lg hover:bg-primary/85 transition-colors"
                    >Start Free Trial</a
                >
            </div>

            <!-- Mobile hamburger -->
            <MobileNav client:load />
        </div>
    </header>

    <!-- Spacer for fixed header -->
    <div class="h-14 lg:h-[72px]"></div>

    <!-- Page Content -->
    <slot />

    <!-- ===== FOOTER ===== -->
    <footer class="bg-foreground pt-16 lg:pt-20 pb-8">
        <div class="max-w-360 mx-auto px-5 lg:px-16">
            <div class="grid grid-cols-2 lg:grid-cols-5 gap-8 lg:gap-12 mb-12 lg:mb-16">
                <!-- Brand -->
                <div class="col-span-2">
                    <div class="flex items-center gap-2.5 mb-4">
                        <svg width="24" height="24" viewBox="0 0 120 120" fill="none">
                            <path
                                d="M60 0c33.137 0 60 26.863 60 60s-26.863 60-60 60-60-26.863-60-60 26.863-60 60-60z m6.976 32.692c-2.497-6.331-11.456-6.331-13.953 0l-4.546 11.55c-0.762 1.933-2.293 3.464-4.226 4.226l-11.55 4.546c-6.331 2.497-6.331 11.456 0 13.953l11.55 4.546c1.933 0.762 3.464 2.293 4.226 4.226l4.546 11.55c2.497 6.331 11.456 6.331 13.953 0l4.546-11.55c0.762-1.933 2.293-3.464 4.226-4.226l11.55-4.546c6.331-2.497 6.331-11.456 0-13.953l-11.55-4.546c-1.933-0.762-3.464-2.293-4.226-4.226l-4.546-11.55z"
                                fill="#FF8400"></path>
                        </svg>
                        <span class="text-white text-sm font-bold tracking-widest font-primary"
                            >UTILITIES</span
                        >
                    </div>
                    <p
                        class="text-muted-foreground text-sm font-secondary leading-relaxed max-w-70"
                    >
                        Modern infrastructure management platform for utility companies of all
                        sizes.
                    </p>
                </div>

                <!-- Product -->
                <div>
                    <h4 class="text-white text-sm font-semibold font-secondary mb-4">Product</h4>
                    <ul class="space-y-3">
                        <li>
                            <a
                                href="/features"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Features</a
                            >
                        </li>
                        <li>
                            <a
                                href="#pricing"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Pricing</a
                            >
                        </li>
                        <li>
                            <a
                                href="#integrations"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Integrations</a
                            >
                        </li>
                        <li>
                            <a
                                href="#changelog"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Changelog</a
                            >
                        </li>
                    </ul>
                </div>

                <!-- Company -->
                <div>
                    <h4 class="text-white text-sm font-semibold font-secondary mb-4">Company</h4>
                    <ul class="space-y-3">
                        <li>
                            <a
                                href="/about"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >About</a
                            >
                        </li>
                        <li>
                            <a
                                href="#blog"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Blog</a
                            >
                        </li>
                        <li>
                            <a
                                href="/careers"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Careers</a
                            >
                        </li>
                        <li>
                            <a
                                href="#contact"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Contact</a
                            >
                        </li>
                    </ul>
                </div>

                <!-- Legal -->
                <div>
                    <h4 class="text-white text-sm font-semibold font-secondary mb-4">Legal</h4>
                    <ul class="space-y-3">
                        <li>
                            <a
                                href="#privacy"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Privacy Policy</a
                            >
                        </li>
                        <li>
                            <a
                                href="#terms"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Terms of Service</a
                            >
                        </li>
                        <li>
                            <a
                                href="#security"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Security</a
                            >
                        </li>
                        <li>
                            <a
                                href="#compliance"
                                class="text-muted-foreground text-sm font-secondary hover:text-white transition-colors"
                                >Compliance</a
                            >
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Divider -->
            <div class="h-px bg-secondary mb-8"></div>

            <!-- Bottom -->
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                <p class="text-muted-foreground text-xs font-secondary">
                    &copy; 2025 Utilities. All rights reserved.
                </p>
                <div class="flex items-center gap-4">
                    <!-- Twitter/X -->
                    <a
                        href="#twitter"
                        class="text-muted-foreground hover:text-white transition-colors"
                        aria-label="Twitter"
                    >
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"
                            ><path
                                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                            ></path></svg
                        >
                    </a>
                    <!-- LinkedIn -->
                    <a
                        href="#linkedin"
                        class="text-muted-foreground hover:text-white transition-colors"
                        aria-label="LinkedIn"
                    >
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"
                            ><path
                                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                            ></path></svg
                        >
                    </a>
                    <!-- GitHub -->
                    <a
                        href="#github"
                        class="text-muted-foreground hover:text-white transition-colors"
                        aria-label="GitHub"
                    >
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"
                            ><path
                                d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
                            ></path></svg
                        >
                    </a>
                </div>
            </div>
        </div>
    </footer>
</BaseLayout>
