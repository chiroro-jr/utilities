{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "insertFinalNewline": true,
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    ".astro/**",
    "pnpm-lock.yaml"
  ]
}
