{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "perf": "warn",
    "style": "warn"
  },
  "plugins": ["unicorn", "typescript", "oxc", "react"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Astro": "readonly"
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    ".astro/**"
  ]
}
